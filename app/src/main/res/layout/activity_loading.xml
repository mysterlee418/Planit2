<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planittest5"
    tools:context="com.j1.planit.LoadingActivity">

    <ImageView
        android:id="@+id/loading_ic"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/planit_main"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_ic"
        android:id="@+id/loading_logins"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <com.google.android.gms.common.SignInButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/googlelogin">
        </com.google.android.gms.common.SignInButton>

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:text="facebook"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="or"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:text="기존 계정 로그인"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:text="회원가입"
            android:onClick="clickCreateAcc"/>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:clickable="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="아이디/ 비밀번호 찾기"/>


    </LinearLayout>






</RelativeLayout>
