<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="34dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_selector_ok_clicked"
            android:id="@+id/add_btn_clickOk"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_selector_cancel_clicked"
            android:layout_alignParentRight="true"
            android:id="@+id/add_btn_clickCancel"/>

    </RelativeLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@null"
        android:hint="제목"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">
        <Button
            android:id="@+id/add_btn_pickdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B1B1B1"
            android:layout_marginRight="36dp"
            android:text="날짜 선택"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/add_btn_picktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:textColor="#B1B1B1"
            android:text="시간 선택"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="색상 설정"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="44dp"/>


        <Spinner
            android:id="@+id/add_color_spinner"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:prompt="@string/spinner_prompt_colorpick">
        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유 설정"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="44dp"/>

        <Spinner
            android:id="@+id/add_share_spinner"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:prompt="@string/spinner_prompt_sharepick">
        </Spinner>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 설정"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="44dp"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_set_alarm"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:prompt="@string/spinner_prompt_setalarm">
        </Spinner>
    </LinearLayout>



    <EditText
        android:id="@+id/add_details"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="상세 정보 입력"
        android:inputType="textMultiLine"/>

</LinearLayout>